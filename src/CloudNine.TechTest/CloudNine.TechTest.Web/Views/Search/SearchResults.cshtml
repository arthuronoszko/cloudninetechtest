@model CloudNine.TechTest.Web.ViewModels.SearchResultsViewModel

<div>
    <table id="searchResultsTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Låt</th>
                <th>Artist</th>
                <th>Lyssna</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var track in Model.Tracks) {
            <tr>
                <td>@track.Name</td>
                <td>@track.Artists</td>
                <td><a href="@track.ListeningLink" class="text-success"><img src="~/Content/Spotify_Icon_RGB_Green.png" style="width: 35px; height: 35px;"/></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#searchResultsTable').DataTable({
            paging: false,
            searching: false,
            info: false,
            columnDefs: [
                { "orderable": false, "targets": 2 }
            ],
            language: {
                "emptyTable": "Hittade tyvärr inga låtar, prova att söka med något annat"
            }
        });
    });
</script>